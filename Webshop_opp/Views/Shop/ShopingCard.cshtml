<h2>@ViewBag.messege</h2>
<table>
    @for (var i = 0; i < @Model.ShoppingCard.Count; i++)
    {   
        <tr>
            <td> 
                <img src="Images/@Model.ShoppingCard[i].Product_image" width="250px" />
                <p>@Model.ShoppingCard[i].ProductName</p>            
            </td>
        </tr>
    }  
</table>
<form method="post" asp-page-handler="add_product">
    <button asp-action="MakeOrder" class="btn btn-default">Bestelling afronden</button>
</form>