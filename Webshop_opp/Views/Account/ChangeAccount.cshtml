@model Webshop_opp.ViewModels.AccountViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
<h3>@ViewBag.message</h3>
    <form method="post">
        <button asp-action="log_out" class="btn btn-default">Uitloggen</button><br />

        <button asp-action="edit_profile" class="btn btn-default">Account aanpassen</button><br />

        <button asp-action="delete_profile" class="btn btn-default">Account verwijderen</button><br />
    </form>
    @if (ViewBag.ButtonClicked == "eddit_profile")
    {
        <form method="post" asp-page-handler="category_created" enctype="multipart/form-data">
            <p>Voornaam: </p>
            @Html.TextBoxFor(model => model.firstName, new { @class = "textbox"})
            @Html.ValidationMessageFor(model => model.firstName)<br>
            <p>Tussennaam: </p>
            @Html.TextBoxFor(model => model.middleName)
            @*@Html.ValidationMessageFor(model => model.middleName)<br>*@
            <p>Achternaam: </p>
            @Html.TextBoxFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)<br>
            <p>Email: </p>
            @Html.TextBoxFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)<br>
            <p>Telefoonnummen: </p>
            @Html.TextBoxFor(model => model.phoneNumber)
            @Html.ValidationMessageFor(model => model.phoneNumber)<br>
            <p>Postcode: </p>
            @Html.TextBoxFor(model => model.postalCode)
            @Html.ValidationMessageFor(model => model.postalCode)<br>
            <p>Straat: </p>
            @Html.TextBoxFor(model => model.street)
            @Html.ValidationMessageFor(model => model.street)<br>
            <p>Huisnummer</p>
            @Html.TextBoxFor(model => model.houseNumber)
            @Html.ValidationMessageFor(model => model.houseNumber)<br>
            <p>Stad: </p>
            @Html.TextBoxFor(model => model.city)
            @Html.ValidationMessageFor(model => model.city)<br>
            <p>Land: </p>
            @Html.TextBoxFor(model => model.country)
            @Html.ValidationMessageFor(model => model.country)<br>
            <p>Provincie: </p>
            @Html.TextBoxFor(model => model.province)
            @Html.ValidationMessageFor(model => model.province)<br>
            <p>Wachtwoord: </p>
            @Html.PasswordFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)<br>          
            <button asp-action="profile_edit" class="btn btn-default">Account Aanmaken</button>
        </form>
    }
</div>